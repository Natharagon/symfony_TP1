{% extends "base.html.twig" %}

{% block body %}
    <main class="container">
        <ol>
            {% for tv in tvs %}
                {% if loop.index0 is divisible by 2 %}
                    <div class="row-12 d-md-flex">
                {% endif %}
                        <div class="col-3">
                            <a href={{"http://127.0.0.1:8000/tv/" ~ tv.id}}><img src={{tv.images.0.path}} height=250 width=auto></img></a>
                        </div>
                        <div class="col-3">
                            <div class="card-body">
                                <h5 class="card-title"><li>{{tv.name}}</li></h5>
                                <p class="card-text">Release date: {{tv.startDate | date('Y-m-d')}}</p>
                                <p class="card-text">Average review score: {{tv.grade}}</p>
                            </div>
                        </div>
                {% if loop.index0 is not divisible by 2 %}
                    </div>
                {% endif %}
            {% endfor %}
            
        </ol>
    </main>
{% endblock %}